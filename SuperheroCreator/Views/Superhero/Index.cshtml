@model IEnumerable<SuperheroCreator.Models.Superhero>

@{
    ViewBag.Title = "Superhero";
}

<h2>Superhero</h2>
<img src="~/image/thumb-1920-463079.jpg" />

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.superheroName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.alteregofirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.alteregolastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.primaryAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.secondaryAbility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catchPhrase)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.superheroName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.alteregofirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.alteregolastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.primaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.secondaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.catchPhrase)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
